@startuml
left to right direction
skinparam packageStyle rectangle

actor User
actor Admin
actor "Payment Gateway" as PG
actor "Notification System" as NS

rectangle "Cinema Ticket Reservation System" {
    User --> (Sign Up)
    User --> (Login)
    User --> (View Movies)
    User --> (Search / Filter Movies)
    User --> (View Showtimes)
    User --> (Select Seat)
    User --> (Book Ticket)
    User --> (Make Payment)
    User --> (Receive E-Ticket)
    User --> (Cancel Reservation)

    Admin --> (Manage Movies)
    Admin --> (Manage Showtimes)
    Admin --> (Manage Halls)
    Admin --> (Generate Reports)

    PG --> (Confirm Payment)
    NS --> (Send Confirmation Message)

    (Book Ticket) .> (Make Payment) : include
    (Make Payment) .> (Confirm Payment) : include
    (Book Ticket) .> (Receive E-Ticket) : include
    (Receive E-Ticket) .> (Send Confirmation Message) : include
}

@enduml
